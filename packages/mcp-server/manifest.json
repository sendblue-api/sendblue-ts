{
  "dxt_version": "0.1",
  "name": "sendblue-mcp",
  "version": "2.0.1",
  "description": "The official MCP Server for the Sendblue API API",
  "author": {
    "name": "Sendblue API",
    "email": "support@sendblue.co"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendblue-api/sendblue-ts.git"
  },
  "homepage": "https://github.com/sendblue-api/sendblue-ts/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.sendblue.com",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SENDBLUE_API_API_KEY": "${user_config.SENDBLUE_API_API_KEY}",
        "SENDBLUE_API_API_SECRET": "${user_config.SENDBLUE_API_API_SECRET}"
      }
    }
  },
  "user_config": {
    "SENDBLUE_API_API_KEY": {
      "title": "api_key",
      "description": "API Key ID",
      "required": true,
      "type": "string"
    },
    "SENDBLUE_API_API_SECRET": {
      "title": "api_secret",
      "description": "API Secret Key",
      "required": true,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
